{
    "compilerOptions": {
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist",
        "resolveJsonModule": true,
        "rootDir": "./src",
        "skipLibCheck": true,
        "strict": true,
        "target": "ES2020",
        "types": ["@types/node"]
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts"],
    "exclude": ["node_modules"]
}
